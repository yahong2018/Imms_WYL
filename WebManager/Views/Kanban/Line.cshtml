            <img style="height: 203px;width: 156px;" src="@ViewBag.OperatorList[0].PicUrl">
            <div style="height: 30px;line-height: 30px;vertical-align: middle;">@ViewBag.OperatorList[0].DisplayName</div>
        </div>

        <div id="person_02">
            <img style="height: 203px;width: 156px;" src="@ViewBag.OperatorList[1].PicUrl">
            <div style="height: 30px;line-height: 30px;vertical-align: middle;">@ViewBag.OperatorList[1].DisplayName</div>
        </div>

        <div id="person_03">
            <img style="height: 203px;width: 156px;" src="@ViewBag.OperatorList[2].PicUrl">
            <div style="height: 30px;line-height: 30px;vertical-align: middle;">@ViewBag.OperatorList[2].DisplayName</div>
        </div>

        <div id="person_04">
